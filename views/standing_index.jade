extends layout

block content
  .w3-padding-32
  .w3-container.w3-animate-opacity
    .w3-row
      .w3-col(style='width:10%').w3-container
      .w3-col(style="width:80%; overflow: auto;")
        table.w3-table.w3-bordered
          tr
            th(style="font-weight:normal").w3-center Team
            th(style="font-weight:normal").w3-center Win
            th(style="font-weight:normal").w3-center Lose
            th(style="font-weight:normal").w3-center Win-Map
            th(style="font-weight:normal").w3-center Lose-Map
            th(style="font-weight:normal").w3-center Tie-Map
            th(style="font-weight:normal").w3-center Diff
          - each d in data
            tr
              td
                - if (d.team == undefined)
                  p.w3-center - 
                - else
                  p.w3-center #{d.team}
              td
                - if (d.win == undefined)
                  p.w3-center 0
                - else 
                  p.w3-center #{d.win}
              td
                - if (d.lose == undefined)
                  p.w3-center 0
                - else 
                  p.w3-center #{d.lose}
              td
                - if (d.win_map == undefined)
                  p.w3-center 0
                - else 
                  p.w3-center #{d.win_map}
              td
                - if (d.lose_map == undefined)
                  p.w3-center 0
                - else 
                  p.w3-center #{d.lose_map}
              td
                - if (d.tie_map == undefined)
                  p.w3-center 0
                - else 
                  p.w3-center #{d.tie_map}
              td
               p.w3-center #{d.win_map - d.lose_map}
                
  .w3-container.w3-black.w3-center.w3-padding-64.w3-margin-top
      a.w3-button.w3-border.w3-border-white(href='#').w3-large Back to Top
