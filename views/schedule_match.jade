extends layout

block content
  .w3-padding-32
  .w3-container.w3-animate-opacity
    .w3-row.w3-center
      .w3-col(style='width:10%').w3-container
      .w3-col(style='width:80%')
        .w3-row
          .w3-half
            .w3-card-4.w3-margin
              .w3-container.w3-center.w3-padding
                img(src='/images/#{data.home_team}.PNG', style="max-width:50%")
              .w3-container.w3-theme
                p #{data.home_team}
                h1 #{data.home_score}
          .w3-half
            .w3-card-4.w3-margin
              header.w3-container.w3-center.w3-padding
                img(src='/images/#{data.away_team}.PNG', style="width:50%")
              .w3-container.w3-theme.w3-center
                p #{data.away_team}
                h1 #{data.away_score}
        .w3-row
          - each d in data.description
            - if (d.map != undefined || d.map != null)
              .w3-card-4.w3-margin
                  .w3-row
                    .w3-third
                      p #{data.home_team}
                      p #{d.home_score}
                    .w3-third.w3-black
                      p #{d.map}
                      p #{d.map_type}
                    .w3-third
                      p #{data.away_team}
                      p #{d.away_score} 
              
  .w3-container.w3-black.w3-center.w3-padding-64.w3-margin-top
      a.w3-button.w3-border.w3-border-white(href='#').w3-large Back to Top


      
